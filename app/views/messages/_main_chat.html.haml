.right-content
  .right-header
    .right-header__chat-space
      .right-header__chat-space__title
        = @group.name
      .right-header__chat-space__member
        .right-header__chat-space__member__name
          %div Member :&nbsp;
        - @group.group_users.each do |group_user|
          = group_user.user.name
    .right-header__chat-space__title-edit
      = link_to edit_group_path(@group) do
        .right-header__chat-space__title-edit__btn
          .right-header__chat-space__title-edit__btn__text Edit
  .right-chat_space
    = render @messages
  .right-form
    = form_for [@group, @message] do |f|
      .right-form__input
        .right-form__input__form
          = f.text_field :content, class: 'right-form__input__form__text', placeholder: 'type a message'
          = f.label :image, class: 'right-form__input__form__mask__image' do
            = icon('fas', 'image')
            = f.file_field :image, class: 'hidden'
        = f.submit 'Send', class: 'right-form__input__send-btn'
