.left-content
  .left-header
    .left-header__box
      .left-header__box__user-name
        = current_user.name
      .left-header__box__icons
        = link_to new_group_path do
          .far.fa-edit
        = link_to edit_group_path(current_user.groups.ids) do
          .fas.fa-cog
  .group
    - current_user.groups.each do |group|
      = link_to group_messages_path(group) do
        .group__name
          = group.name
        .group__new-chat
          = group.show_last_message
